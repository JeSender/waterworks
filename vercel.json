{
  "version": 2,
  "builds": [
    {
      "src": "waterworks/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "waterworks/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "waterworks.settings"
  },
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}
